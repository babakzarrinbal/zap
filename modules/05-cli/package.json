{
  "name": "@zzapp/cli",
  "version": "1.0.0",
  "description": "cli tool for zap",
  "main": "dist/index.ts",
  "bin": {
    "zap": "./dist/cli.js"
  },
  "pkg": {
    "scripts": "dist/cli.js",
    "assets": [
      "dist/**/*",
      "node_modules/**/@zzapp/**/*.sql"
    ],
    "targets": [
      "node16-win-x64",
      "node16-linux-x64"
    ],
    "output":"zap",
    "outputPath": "pkg"
  },
  "scripts": {
    "start": "npx ts-node -r tsconfig-paths/register ./src/cli.ts",
    "build": "npx rimraf dist &&npx tsc &&npx tscpaths -p tsconfig.json -s ./src -o ./dist",
    "pkg-win": "pkg . --targets node16-win-x64 -o=pkg/zap",
    "pkg-macos": "pkg . --targets node16-macos-x64 -o=pkg/zap",
    "pkg-linux": "pkg . --targets node16-linux-x64 -o=pkg/zap",
    "lint": "eslint --fix 'src/**/*.ts'",
    "test": "jest"
  },
  "author": "babak.zarrinbal",
  "email": "babak.zarrinbal@gmail.com",
  "license": "ISC",
  "engines": {
    "node": ">= 12.*",
    "npm": ">= 6.*"
  },
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/node": "^17.0.13",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "jest": "^27.4.7",
    "pkg": "^5.5.2",
    "rollup": "^2.64.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tsc": "^2.0.4",
    "tscpaths": "^0.0.9",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  },
  "dependencies": {
    "@zzapp/core": "file:../00-core",
    "yargs": "^17.3.1"
  }
}

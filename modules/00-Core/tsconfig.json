{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2016"],
     "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "checkJs": false,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@src/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}